 pages = {293-322},
 title = {Whose Artists in Uniform? Boris Pil'njak and American Writers in the Early 1930s},
 url = {https://www.sciencedirect.com/science/article/pii/S0304347907001160},
 volume = {62},
 year = {2007}
}

